<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,lightning:isUrlAddressable" access="global" >
	<!--Attributes-->
    <aura:attribute name="accFields" type="Account"/>
     
    <!--Component Start-->
     
    <!--Lightning Workspace API-->
    <lightning:workspaceAPI aura:id="workspace"/>
     
    <!--Lightning Force Data to get Account record-->
    <force:recordData aura:id="accRecordData"
                      layoutType="FULL"
                      recordId="{!v.recordId}"
                      targetFields="{!v.accFields}"
                      recordUpdated="{!c.handleRecordUpdate}"/>
    
    <lightning:card title="Open Subtab from here">
		<lightning:button label="open subtab" variant="brand" onclick="{!c.handleOpenCaseClick}" />
	</lightning:card>
    
    <!--Component End-->
</aura:component>